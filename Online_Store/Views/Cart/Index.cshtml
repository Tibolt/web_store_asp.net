@model IEnumerable<Online_Store.Models.Product>


<div class="text-center">
    <h1>CART</h1>
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Item Name</th>
                    <th scope="col">Prize</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Name</th>
                            <td>@item.Prize</td>
                        </tr>
                    }
            </tbody>
        </table>
        <a class="btn btn-primary" asp-controller="Cart" asp-action="Checkout">Go to checkout</a>
    }
    else
    {
        <h2>Empty</h2>
    }
</div>

