@model IEnumerable<Online_Store.Models.Product>

<div class="text-center container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products list</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Create">Add new product</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="d-lg-table table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Prize</th>
                    <th>Amount</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="30%">@item.Name</td>
                        <td width="30%">@item.Prize$</td>
                        <td width="30%">@item.Quantity</td>
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-primary mx-1" asp-controller="ProductsPanel" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                                <a class="btn btn-danger mx-1" asp-controler="ProductsPanel" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No products created yet</p>
    }
</div>

