@model Online_Store.Models.Product

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 p1-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Prize"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Quantity"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Name" disabled class="form-control"/>
                    </div>
                    <div class="col-4">
                        <input asp-for="Prize" disabled class="form-control"/> 
                    </div>
                    <div class="col-4">
                        <input asp-for="Quantity" disabled class="form-control"/>
                    </div>
                </div>
                <div class="form-group row mx-5">
                    <div class="col-12 row text-center">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-40" value="Delete"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-40">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>